---
const {
    title,
    description,
    pclass = "max-w-(--breakpoint-sm)"
} = Astro.props;

const classp = "mx-auto";
---

<header class="text-center mb-8">

    <h2 class="text-3xl md:text-5xl mb-4">
        {title}
    </h2>

    <p class={`${classp} ${pclass}`}>
        {description}
    </p>

</header>
